<Project>
  <Project.ExportOptions Namespace="MyraPad.UI" Class="StudioWidget" OutputPath="D:/Projects/Myra/src/MyraPad/UI" />
  <VerticalStackPanel>
    <VerticalStackPanel.Proportions>
      <Proportion Type="Auto" />
      <Proportion Type="Fill" />
    </VerticalStackPanel.Proportions>
    <HorizontalMenu Id="_mainMenu">
      <MenuItem Id="_menuFile" Text="&amp;File">
        <MenuItem Id="_menuFileNew" Text="&amp;New" ShortcutText="Ctrl+N" />
        <MenuItem Id="_menuFileOpen" Text="&amp;Open" ShortcutText="Ctrl+O" />
        <MenuItem Id="_menuFileReload" Text="&amp;Reload" ShortcutText="Ctrl+R" />
        <MenuItem Id="_menuFileSave" Text="&amp;Save" ShortcutText="Ctrl+S" />
        <MenuItem Id="_menuFileSaveAs" Text="Save &amp;As..." />
        <MenuItem Id="_menuFileExportToCS" Text="&amp;Export To C#..." ShortcutText="Ctrl+E" />
        <MenuSeparator />
        <MenuItem Id="_menuFileLoadStylesheet" Text="&amp;Load Stylesheet" />
        <MenuItem Id="_menuFileReloadStylesheet" Text="Rel&amp;oad Stylesheet" ShortcutText="Ctrl+T" />
        <MenuItem Id="_menuFileResetStylesheet" Text="Rese&amp;t Stylesheet" />
        <MenuSeparator />
        <MenuItem Id="_menuFileDebugOptions" Text="&amp;UI Debug Options" />
        <MenuSeparator />
        <MenuItem Id="_menuFileQuit" Text="&amp;Quit" ShortcutText="Ctrl+Q" />
      </MenuItem>
      <MenuItem Id="" Text="&amp;Edit">
        <MenuItem Id="_menuItemCopy" Text="&amp;Copy" ShortcutText="Ctrl+Insert, Ctrl+C" />
        <MenuItem Id="_menuItemPaste" Text="&amp;Paste" ShortcutText="Shift+Insert, Ctrl+V" />
        <MenuSeparator />
        <MenuItem Id="_menuEditFormatSource" Text="&amp;Format Source" ShortcutText="Ctrl+F" />
      </MenuItem>
      <MenuItem Id="" Text="&amp;Help">
        <MenuItem Id="_menuHelpAbout" Text="&amp;About" />
      </MenuItem>
    </HorizontalMenu>
    <HorizontalSplitPane Id="_topSplitPane">
      <VerticalStackPanel>
        <VerticalStackPanel.Proportions>
          <Proportion Type="Fill" />
        </VerticalStackPanel.Proportions>
        <VerticalSplitPane Id="_leftSplitPane">
          <Panel Id="_projectHolder" />
          <ScrollViewer>
            <TextBox Text="" Multiline="True" Wrap="True" Id="_textSource" VerticalAlignment="Stretch" GridRow="2" />
          </ScrollViewer>
        </VerticalSplitPane>
        <HorizontalSeparator />
        <Label Text="Reloading..." Id="_textStatus" />
      </VerticalStackPanel>
      <VerticalStackPanel>
        <VerticalStackPanel.Proportions>
          <Proportion Type="Fill" />
        </VerticalStackPanel.Proportions>
        <ScrollViewer Id="_propertyGridPane" />
        <HorizontalSeparator />
        <Label Text="Line: 1, Column: 2, Indent: 3" Id="_textLocation" />
      </VerticalStackPanel>
    </HorizontalSplitPane>
  </VerticalStackPanel>
</Project>