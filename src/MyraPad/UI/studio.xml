<Project>
  <Project.ExportOptions Namespace="MyraPad.UI" Class="StudioWidget" OutputPath="D:/Projects/Myra/src/MyraPad/UI" />
  <VerticalStackPanel>
    <VerticalStackPanel.Proportions>
      <Proportion Type="Auto" />
      <Proportion Type="Fill" />
    </VerticalStackPanel.Proportions>
    <HorizontalMenu Id="">
      <MenuItem Id="_menuFile" Text="&amp;File">
        <MenuItem ShortcutText="Ctrl+N" Id="_menuFileNew" Text="&amp;New" />
        <MenuItem ShortcutText="Ctrl+O" Id="_menuFileOpen" Text="&amp;Open" />
        <MenuItem ShortcutText="Ctrl+R" Id="_menuFileReload" Text="&amp;Reload" />
        <MenuItem ShortcutText="Ctrl+S" Id="_menuFileSave" Text="&amp;Save" />
        <MenuItem Id="_menuFileSaveAs" Text="Save &amp;As..." />
        <MenuItem ShortcutText="Ctrl+E" Id="_menuFileExportToCS" Text="&amp;Export To C#..." />
        <MenuSeparator />
        <MenuItem Id="_menuFileLoadStylesheet" Text="&amp;Load Stylesheet" />
        <MenuItem ShortcutText="Ctrl+T" Id="_menuFileReloadStylesheet" Text="Rel&amp;oad Stylesheet" />
        <MenuItem Id="_menuFileResetStylesheet" Text="Rese&amp;t Stylesheet" />
        <MenuSeparator />
        <MenuItem Id="_menuFileDebugOptions" Text="&amp;UI Debug Options" />
        <MenuSeparator />
        <MenuItem ShortcutText="Ctrl+Q" Id="_menuFileQuit" Text="&amp;Quit" />
      </MenuItem>
      <MenuItem Id="" Text="&amp;Edit">
        <MenuItem ShortcutText="Ctrl+Insert, Ctrl+C" Id="_menuItemCopy" Text="&amp;Copy" />
        <MenuItem ShortcutText="Shift+Insert, Ctrl+V" Id="_menuItemPaste" Text="&amp;Paste" />
        <MenuSeparator />
        <MenuItem ShortcutText="Ctrl+F" Id="_menuEditFormatSource" Text="&amp;Format Source" />
      </MenuItem>
      <MenuItem Id="" Text="&amp;Help">
        <MenuItem Id="_menuHelpAbout" Text="&amp;About" />
      </MenuItem>
    </HorizontalMenu>
    <HorizontalSplitPane Id="_topSplitPane">
      <VerticalStackPanel>
        <VerticalStackPanel.Proportions>
          <Proportion Type="Fill" />
        </VerticalStackPanel.Proportions>
        <VerticalSplitPane Id="_leftSplitPane">
          <Panel Id="_projectHolder" />
          <ScrollViewer>
            <TextBox Text="" Multiline="True" Wrap="True" Id="_textSource" VerticalAlignment="Stretch" GridRow="2" />
          </ScrollViewer>
        </VerticalSplitPane>
        <HorizontalSeparator />
        <Label Text="Reloading..." Id="_textStatus" />
      </VerticalStackPanel>
      <VerticalStackPanel>
        <VerticalStackPanel.Proportions>
          <Proportion Type="Fill" />
        </VerticalStackPanel.Proportions>
        <ScrollViewer Id="_propertyGridPane" />
        <HorizontalSeparator />
        <Label Text="Line: 1, Column: 2, Indent: 3" Id="_textLocation" />
      </VerticalStackPanel>
    </HorizontalSplitPane>
  </VerticalStackPanel>
</Project>